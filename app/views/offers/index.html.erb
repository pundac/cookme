<div class="container footer-bottom">
  <div class="d-flex justify-content-between mt-2">

    <%= link_to 'Back to categories', categories_path, class: 'btn btn-flat' %>
    <%= link_to 'Create one', new_offer_path, class: "btn btn-flat btn-create" %>
  </div>
    <div class="d-flex justify-content-between">
    <div class="cards ">
    <% @offers.each do |offer| %>
      <div class="card-product">
        <img src="https://st.depositphotos.com/1036708/2191/i/450/depositphotos_21918797-stock-photo-knife-and-fork-with-plate.jpg" />
        <div class="card-product-infos">
          <ul>
            <li class="offer-title"><%= link_to offer.title, offer_path(offer) %></li>
            <li class="offer-desc"><%= offer.description.split("").first(35).join %></li>
            <li class="offer-price"><%= offer.price %>â‚¬</li>
          </ul>
        </div>

      </div>
    <% end %>
    </div>
    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
