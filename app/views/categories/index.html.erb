<div class="container">
  <div class="cards">
    <% @categories.each do |category|  %>
    <%= link_to categories_path do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
         url(<%= cl_image_path(category.photo.key)%>)">
        <%=  category.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

